{
  // ╭──────────────────────────────────────────────────────────╮
  // │                      Language Server                     │
  // ╰──────────────────────────────────────────────────────────╯
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "kotlin": {
      "command": "/Users/jkeam/dev/lsp/kotlin/server/bin/kotlin-language-server",
      "filetypes": ["kotlin", "kt", "kts"]
    }
  },
  // ╭──────────────────────────────────────────────────────────╮
  // │                           Ruby                           │
  // ╰──────────────────────────────────────────────────────────╯
  "solargraph.commandPath": "/usr/local/bin/solargraph",
  "solargraph.diagnostics": true,
  "solargraph.autoformat": true,
  "solargraph.formatting": true,
  "solargraph.trace.server": "off",
  "solargraph.folding": false,
  "solargraph.symbols": true,
  "solargraph.references": true,
  "solargraph.definitions": true,
  // ╭──────────────────────────────────────────────────────────╮
  // │                           Java                           │
  // ╰──────────────────────────────────────────────────────────╯
  "java.trace.server": "off",
  "java.enabled": true,
  "java.codeGeneration.useBlocks": true,
  "java.import.maven.enabled": true,
  "java.maven.downloadSources": false,
  // ╭──────────────────────────────────────────────────────────╮
  // │                           PHP                            │
  // ╰──────────────────────────────────────────────────────────╯
  "phpls.path": "/opt/homebrew/bin/intelephense",
  // ╭──────────────────────────────────────────────────────────╮
  // │                           YAML                           │
  // ╰──────────────────────────────────────────────────────────╯
  // "yaml.schemaStore.url": "https://raw.githubusercontent.com/instrumenta/kubernetes-json-schema/master/v1.17.0-standalone-strict/all.json",
  "yaml.enable": true,
  "yaml.hover": true,
  "yaml.schemas": {
    "kubernetes": "/*.yaml"
  }
}
